@model Contactenlijst.Models.ContactDetailsViewModel

<strong>Avatar</strong>
<p><@if (Model.Avatar.Length > 0)
{
    <img src="@ConvertBytesToImg(Model.Avatar)" style="display:block"/>
}
else
{
    <p>No avatar available</p>
}</p>

<strong>Naam</strong> 
<p>@preFix(Model.Geslacht) @Model.Naam @Model.Voornaam</p>

<strong>Geboortedatum</strong>
<p>@Model.GeboorteDatum</p>

<strong>Leeftijd</strong>
<p>@showAge(Model.GeboorteDatum) jaar</p>

<strong>Email</strong>
<p>@Model.Email</p>

<strong>Telefoonnr.</strong>
<p>@Model.TelefoonNr</p>

<strong>Adres</strong>
<p>@Model.Adres</p>

<strong>Beschrijving</strong>
<p>@Model.Beschrijving</p>

@functions
{public int showAge(DateTime birthDate)
    {
        int birthYear = Convert.ToInt32(birthDate.Year);
        int thisYear = Convert.ToInt32(DateTime.Today.Year);

        return thisYear - birthYear;
    }

    public string preFix(String s)
    {
        if (s == "man")
        {
            return "Mr.";
        }
        else
        {
            return "Mevr.";
        }
    }
    string ConvertBytesToImg(Byte[] image)
    {
        string imreBase64Data = Convert.ToBase64String(image);

        return $"data:image/png;base64,{imreBase64Data}";
    }

}


